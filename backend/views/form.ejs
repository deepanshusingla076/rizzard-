<!DOCTYPE html>
<html lang="en">
<head>
    <title>EventsForm - Rizzard University</title>
    <%- include('./partials/head.ejs') %>
    <style>
        .event-registration-section {
            padding: 60px 0;
            background-color: #f8f9fa;
        }

        .event-registration-form {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-control,
        .form-select {
            border-radius: 5px;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            transition: border-color 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            font-size: 1.1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .form-label {
            font-weight: 500;
            color: #555;
        }
    </style>
</head>
<body>
    <%- include('./partials/header.ejs', {currentPage: 'form'}) %>
    
    <br><br><br>

    <section id="center" class="box">
        <div class="container-xl">
            <div class="boxa">
                <div class="col-md-12">
                    <h1 class="boxb">Register Events</h1>
                    <h6 class="boxc"><a class="b" href="/dashboard">Home &nbsp;|</a>&nbsp;Register</h6>
                </div>
            </div>
        </div>
    </section>

    <!-- Event Registration Form -->
    <section id="event-registration" class="event-registration-section">
        <div class="container-xl">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="event-registration-form">
                        <h2 class="form-title">Event Registration Form</h2>
                        <form id="event-registration-form" action="/api/submit-event-registration" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" name="name"
                                    placeholder="Enter your full name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email"
                                    placeholder="Enter your email address" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="phone" name="phone"
                                    placeholder="Enter your phone number" required>
                            </div>
                            <div class="mb-3">
                                <label for="college" class="form-label">College Name</label>
                                <input type="text" class="form-control" id="college" name="college"
                                    placeholder="Enter your college name" required>
                            </div>
                            <div class="mb-3">
                                <label for="event" class="form-label">Event Name</label>
                                <select class="form-select" id="event" name="event" required>
                                    <option value="" disabled selected>Select an event</option>
                                    <option value="Event 1">Tech Conference 2023</option>
                                    <option value="Event 2">Career Fair</option>
                                    <option value="Event 3">Alumni Reunion</option>
                                </select>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('./partials/chatbot.ejs') %>
    <%- include('./partials/footer.ejs') %>
</body>
</html>
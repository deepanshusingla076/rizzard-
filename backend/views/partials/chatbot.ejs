<div class="chatbot-container" id="chatbot-container">
    <div class="chatbot-header">
        <h3>Rizzard AI Assistant</h3>
        <button id="close-chatbot">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <div class="chatbot-messages" id="chatbot-messages">
        <div class="message bot">
            <div class="message-content">
                Hello! I'm your Rizzard AI Assistant. How can I help you today?
            </div>
            <div class="message-timestamp">10:00 AM</div>
        </div>
    </div>
    <div class="chatbot-input">
        <input type="text" placeholder="Type your message..." id="chatbot-input-field">
        <button id="send-message">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
</div>

<button id="chatbot-toggle">
    <i class="fas fa-comments"></i>
</button>